{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                                
    "rootDir": "./src",                                    
    "outDir": "./dist",                                  
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                                       
    "strictNullChecks": false,                                 
    "skipLibCheck": true,                                
    "typeRoots": ["src/@types", "node_modules/@types"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
